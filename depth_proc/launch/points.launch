<?xml version="1.0" ?>

<!-- Launches the nodelets which  provide point cloud information [can also be ttaken directly from cam]-->
<!-- requires depth_image_proc to be installed  -->
<launch>  
  <node pkg="nodelet" type="nodelet" name="nodelet_manager" args="manager" />

  <node pkg="nodelet" type="nodelet" name="nodelet1"
        args="load depth_image_proc/point_cloud_xyz nodelet_manager">
    <remap from="camera_info" to="/camera/depth/camera_info"/>
    <remap from="image_rect" to="/camera/depth/image_raw"/>
    <remap from="points" to="/camera/proc/depth/points"/>
  </node>
</launch>
